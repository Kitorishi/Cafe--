<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buenos días,"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Un café hoy?"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="22sp" />
                </LinearLayout>

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/colorPrimaryContainer"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo_cafeteria"
                    app:tint="?attr/colorOnPrimaryContainer"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />
            </LinearLayout>

            <!-- BARRA DE BÚSQUEDA -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHigh">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_search"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:background="@null"
                        android:hint="Buscar tu bebida favorita..."
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="?attr/colorOnSurface"
                        android:textColorHint="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CATEGORÍAS (Horizontal) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categorías"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="12dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:clipToPadding="false"
                android:paddingHorizontal="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Categoría 1: Bebidas -->
                    <!-- Agregamos ID: cardCatBebidas y tvCatBebidas -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardCatBebidas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        app:cardBackgroundColor="?attr/colorPrimary"
                        app:cardCornerRadius="24dp"
                        app:strokeWidth="0dp">
                        <TextView
                            android:id="@+id/tvCatBebidas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="12dp"
                            android:text="Bebidas"
                            android:textColor="?attr/colorOnPrimary"
                            android:textStyle="bold"/>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Categoría 2: Postres -->
                    <!-- Agregamos ID: cardCatPostres y tvCatPostres -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardCatPostres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        app:cardBackgroundColor="?attr/colorSurfaceContainerHighest"
                        app:cardCornerRadius="24dp"
                        app:strokeWidth="0dp">
                        <TextView
                            android:id="@+id/tvCatPostres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="12dp"
                            android:text="Postres"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Categoría 3: Especialidades -->
                    <!-- Agregamos ID: cardCatEspecialidades y tvCatEspecialidades -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardCatEspecialidades"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        app:cardBackgroundColor="?attr/colorSurfaceContainerHighest"
                        app:cardCornerRadius="24dp"
                        app:strokeWidth="0dp">
                        <TextView
                            android:id="@+id/tvCatEspecialidades"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="24dp"
                            android:paddingVertical="12dp"
                            android:text="Especialidades"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- LISTA DE PRODUCTOS (Vertical) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Populares"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface" />

            <LinearLayout
                android:id="@+id/productsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingBottom="24dp">
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- AQUÍ ESTÁ EL BOTÓN FLOTANTE PARA VER EL CARRITO -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:text="Ver Pedido"
        android:textColor="?attr/colorOnPrimaryContainer"
        app:icon="@android:drawable/ic_menu_agenda"
        app:iconTint="?attr/colorOnPrimaryContainer"
        android:backgroundTint="?attr/colorPrimaryContainer"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>